# ===========================
# 拾光记忆 - 后端环境变量配置
# ===========================
# 使用方法：cp .env.example .env && nano .env

# ---------------------------
# 安全配置（⚠️ 必须修改）
# ---------------------------
# JWT 密钥，生成命令：openssl rand -hex 32
SECRET_KEY=CHANGE_THIS_TO_A_SUPER_SECRET_KEY

ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30000

# ---------------------------
# 数据库配置
# ---------------------------
DATABASE_URL=sqlite:///./data/memento.db

# ---------------------------
# 应用配置
# ---------------------------
DEBUG=false
HOST=0.0.0.0
PORT=8000

# ---------------------------
# 默认管理员（⚠️ 必须修改密码）
# ---------------------------
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=CHANGE_THIS_PASSWORD
DEFAULT_ADMIN_DOB_STR=1990-01-01

# ---------------------------
# 文件上传配置
# ---------------------------
UPLOAD_DIR=./uploads
ORIGINAL_DIR=./uploads/originals
THUMBNAIL_DIR=./uploads/thumbnails
MAX_IMAGE_SIZE_MB=10
THUMBNAIL_MAX_SIZE=800